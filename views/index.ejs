<%- include('./partials/header', {loggedin: false}) %>
<div class="w-full min-h-[80vh] flex items-center justify-center px-6">
    <div class="w-full max-w-md">
        <div class="bg-zinc-900 rounded-[3rem] p-10 shadow-2xl border border-white/5">
            <div class="text-center mb-10">
                <h2 class="text-3xl font-bold text-white tracking-tighter">Welcome Back</h2>
                <p class="text-zinc-400 mt-2">Enter your credentials to access Scatch.</p>
            </div>

            <% if(error.length > 0){ %>
                <div class="mb-6 bg-red-500/10 border border-red-500/20 text-red-400 px-4 py-3 rounded-xl text-sm text-center">
                    <%= error %>
                </div>
            <% } %>

            <form action="/users/login" method="post" class="space-y-4">
                <div class="space-y-1">
                    <label class="text-xs font-semibold text-zinc-500 ml-1 uppercase">Email Address</label>
                    <input class="w-full px-5 py-4 bg-white/5 border border-white/10 rounded-2xl focus:ring-2 focus:ring-blue-500 outline-none text-white transition-all placeholder:text-zinc-600" type="email" placeholder="name@company.com" name="email">
                </div>
                <div class="space-y-1">
                    <label class="text-xs font-semibold text-zinc-500 ml-1 uppercase">Password</label>
                    <input class="w-full px-5 py-4 bg-white/5 border border-white/10 rounded-2xl focus:ring-2 focus:ring-blue-500 outline-none text-white transition-all placeholder:text-zinc-600" type="password" placeholder="••••••••" name="password">
                </div>
                <button type="submit" class="w-full bg-white text-black py-4 rounded-2xl font-bold hover:bg-zinc-200 transition-all active:scale-[0.98] mt-4">
                    Sign In
                </button>
            </form>

            <div class="mt-8 pt-8 border-t border-white/5 text-center">
                <p class="text-zinc-500">New to Scatch? <a href="/signup" class="text-white font-bold hover:underline underline-offset-4">Create an account</a></p>
            </div>
        </div>
    </div>
</div>
<%- include('./partials/footer') %>