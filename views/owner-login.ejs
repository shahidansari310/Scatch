<%- include('./partials/header', {loggedin: false}) %>
<div class="min-h-[calc(100vh-80px)] flex items-center justify-center px-10 bg-zinc-50">
    <div class="w-full max-w-md bg-white p-10 rounded-3xl shadow-xl shadow-zinc-200 border border-zinc-100">
        <div class="text-center mb-10">
            <div class="w-16 h-16 bg-blue-100 text-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
                <i class="ri-shield-user-line text-3xl"></i>
            </div>
            <h1 class="text-2xl font-bold text-zinc-900">Admin Access</h1>
            <p class="text-zinc-500 mt-1">Please verify your owner credentials</p>
        </div>

        <% if(error && error.length > 0){ %>
            <div class="mb-6 bg-red-50 text-red-600 px-4 py-3 rounded-xl text-sm text-center font-medium border border-red-100">
                <%= error %>
            </div>
        <% } %>

        <form action="/admin/login" method="post" class="space-y-5">
            <div>
                <label class="block text-xs font-bold uppercase text-zinc-400 mb-2 ml-1">Email Address</label>
                <input class="w-full px-4 py-3 bg-zinc-50 border border-zinc-200 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none transition" type="email" placeholder="owner@scatch.com" name="email" required>
            </div>
            <div>
                <label class="block text-xs font-bold uppercase text-zinc-400 mb-2 ml-1">Secure Password</label>
                <input class="w-full px-4 py-3 bg-zinc-50 border border-zinc-200 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none transition" type="password" placeholder="••••••••" name="password" required>
            </div>
      
            <button type="submit" class="w-full bg-zinc-900 text-white py-4 rounded-xl font-bold hover:bg-black transition-all">
                Enter Dashboard
            </button>
        </form>

        <div class="mt-8 pt-8 border-t border-zinc-100 text-center">
            <p class="text-zinc-500 text-sm">Regular user? <a href="/" class="text-blue-600 font-bold hover:underline">Login here</a></p>
        </div>
    </div>
</div>
<%- include('./partials/footer') %>