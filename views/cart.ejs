<%- include('./partials/header') %>
    <div class="max-w-7xl mx-auto px-10 py-12">
        <h1 class="text-3xl font-bold mb-10">Your Shopping Bag</h1>
        <div class="flex flex-col lg:flex-row gap-12">
            <div class="flex-grow space-y-6">
                <% user.cart.forEach(function(item){ %>
                    <div class="bg-white rounded-3xl p-6 flex items-center gap-8 border border-zinc-100 shadow-sm">
                        <div class="w-40 h-40 rounded-2xl flex items-center justify-center p-4 bg-<%= item.bgcolor %>">
                            <img class="h-full object-contain"
                                src="data:image/jpeg;base64,<%= item.image.toString('base64') %>">
                        </div>
                        <div class="flex-grow">
                            <h3 class="text-xl font-bold text-zinc-900">
                                <%= item.name %>
                            </h3>
                            <div class="flex items-center gap-4 mt-4">
                                <button
                                    class="w-8 h-8 rounded-full border border-zinc-200 hover:bg-zinc-50 transition"><i
                                        class="ri-subtract-line"></i></button>
                                <span class="font-bold">01</span>
                                <button
                                    class="w-8 h-8 rounded-full border border-zinc-200 hover:bg-zinc-50 transition"><i
                                        class="ri-add-line"></i></button>
                            </div>
                        </div>
                        <div class="text-right">
                            <h4 class="text-xl font-bold">₹ <%= item.price %>
                            </h4>
                            <a href="/removefromcart/<%= item._id %>"
                                class="text-red-500 mt-2 hover:underline inline-block">
                                Remove
                            </a>
                        </div>
                    </div>
                    <% }) %>
            </div>

            <div class="w-full lg:w-96">
                <div class="bg-white rounded-3xl p-8 border border-zinc-100 shadow-sm sticky top-24">
                    <h3 class="text-xl font-bold mb-6 text-zinc-900">Order Summary</h3>

                    <div class="space-y-4">
                        <div class="flex justify-between items-center">
                            <span class="text-zinc-500 font-medium">Subtotal</span>
                            <span class="text-zinc-900 font-bold">₹ <%= subtotal %></span>
                        </div>

                        <div class="flex justify-between items-center">
                            <span class="text-zinc-500 font-medium">Discount</span>
                            <span class="text-green-600 font-bold">- ₹ <%= totalDiscount %></span>
                        </div>

                        <div class="flex justify-between items-center">
                            <span class="text-zinc-500 font-medium">Platform Fee</span>
                            <span class="text-zinc-900 font-bold">₹ <%= platformFee %></span>
                        </div>

                        <div class="flex justify-between items-center border-b border-zinc-100 pb-4">
                            <span class="text-zinc-500 font-medium">Shipping</span>
                            <span class="text-green-600 font-bold uppercase text-xs tracking-widest">Free</span>
                        </div>

                        <div class="flex justify-between items-center pt-2">
                            <span class="text-lg font-bold text-zinc-900">Total Amount</span>
                            <span class="text-2xl font-black text-blue-600">₹ <%= final %></span>
                        </div>
                    </div>

                    <button
                        class="w-full bg-zinc-900 text-white py-4 rounded-2xl font-bold mt-8 hover:bg-black transition-all shadow-lg shadow-zinc-200">
                        Proceed to Payment
                    </button>

                    <p class="text-center text-xs text-zinc-400 mt-4 flex items-center justify-center gap-1">
                        <i class="ri-shield-check-line"></i> Secure Checkout Guaranteed
                    </p>
                </div>
            </div>
        </div>
    </div>
    </div>
    <%- include('./partials/footer') %>