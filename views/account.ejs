<%- include('./partials/header') %>
<div class="max-w-4xl mx-auto px-10 py-12">
    <div class="bg-white rounded-3xl p-10 shadow-sm border border-zinc-100">
        <div class="flex items-center gap-6 mb-10">
            <div class="w-24 h-24 bg-blue-100 rounded-full flex items-center justify-center text-3xl font-bold text-blue-600">
                <%= user.fullname.charAt(0) %>
            </div>
            <div>
                <h1 class="text-3xl font-bold text-zinc-900"><%= user.fullname %></h1>
                <p class="text-zinc-500"><%= user.email %></p>
            </div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="p-6 bg-zinc-50 rounded-2xl">
                <h3 class="font-bold text-zinc-400 uppercase text-xs tracking-widest mb-2">Total Orders</h3>
                <p class="text-2xl font-bold"><%= user.orders.length %></p>
            </div>
            <div class="p-6 bg-zinc-50 rounded-2xl">
                <h3 class="font-bold text-zinc-400 uppercase text-xs tracking-widest mb-2">Cart Items</h3>
                <p class="text-2xl font-bold"><%= user.cart.length %></p>
            </div>
        </div>
        
        <div class="mt-10 pt-10 border-t border-zinc-100 flex gap-4">
            <button class="px-6 py-3 bg-zinc-900 text-white rounded-xl font-bold">Edit Profile</button>
            <a href="/users/logout" class="px-6 py-3 border border-red-200 text-red-600 rounded-xl font-bold">Sign Out</a>
        </div>
    </div>
</div>
<%- include('./partials/footer') %>