<%- include('./partials/header') %>
<div class="max-w-7xl mx-auto px-6 py-12 flex flex-col md:flex-row gap-10">
    
    <aside class="w-full md:w-1/4 sticky top-24 h-fit bg-white p-6 rounded-3xl border border-zinc-100 shadow-sm">
        <div class="space-y-6">
            <div>
                <h4 class="text-xs font-bold uppercase tracking-widest text-zinc-400 mb-4">Management</h4>
                <nav class="flex flex-col gap-3 font-medium text-zinc-600">
                     <a href="/admin/admin" class="flex items-center gap-2 text-blue-600 bg-blue-50 px-4 py-2 rounded-xl">
                        <i class="ri-layout-grid-line"></i> All Products
                    </a>
                    <a href="/admin/create-product" class="flex items-center gap-2 hover:text-blue-600 hover:bg-zinc-50 px-4 py-2 rounded-xl transition">
                        <i class="ri-add-box-line"></i> Create Product
                    </a>
                </nav>
            </div>
            
            <div class="pt-6 border-t border-zinc-100">
                <h4 class="text-xs font-bold uppercase tracking-widest text-zinc-400 mb-4">System</h4>
                <a href="/users/logout" class="flex items-center gap-2 text-red-500 hover:bg-red-50 px-4 py-2 rounded-xl transition">
                    <i class="ri-logout-box-r-line"></i> Logout
                </a>
            </div>
        </div>
    </aside>

    <main class="w-full md:w-3/4">
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-10">
            <div>
                <h1 class="text-3xl font-bold text-zinc-900">Store Inventory</h1>
                <p class="text-zinc-500">Manage your product listings.</p>
            </div>
            <a href="/admin/delete-all" onclick="return confirm('Delete all products?')" 
               class="flex items-center gap-2 text-red-600 bg-red-50 hover:bg-red-100 px-5 py-2.5 rounded-xl font-semibold text-sm transition">
                <i class="ri-delete-bin-line"></i> Delete All
            </a>
        </div>

        <% if(success && success.length > 0){ %>
            <div class="mb-6 bg-green-50 text-green-700 px-6 py-4 rounded-2xl border border-green-100 flex items-center gap-3">
                <i class="ri-checkbox-circle-line text-xl"></i>
                <span class="font-medium"><%= success %></span>
            </div>
        <% } %>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <% if (products && products.length > 0) { %>
                <% products.forEach(function(product) { %>
                    <div class="bg-white rounded-3xl overflow-hidden border border-zinc-100 shadow-sm flex group transition-all">
                        <div class="w-32 h-full bg-<%= product.bgcolor %> flex items-center justify-center p-4">
                            <img class="max-h-24 object-contain" src="data:image/jpeg;base64, <%= product.image.toString('base64') %>" alt="">
                        </div>
                        <div class="flex-grow p-5 flex flex-col justify-between bg-<%= product.panelcolor %> text-<%= product.textcolor %>">
                            <div class="flex justify-between items-start">
                                <div>
                                    <h3 class="font-bold text-lg"><%= product.name %></h3>
                                    <span class="opacity-80">â‚¹ <%= product.price %></span>
                                </div>
                                <div class="flex gap-2">
                                    <a href="/admin/delete/<%= product._id %>" class="p-2 bg-red-50/20 hover:bg-red-500 hover:text-white rounded-lg transition">
                                        <i class="ri-delete-bin-6-line"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </main>
</div>
<%- include('./partials/footer') %>