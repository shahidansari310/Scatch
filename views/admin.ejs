<%- include('./partials/header') %>
<div class="max-w-7xl mx-auto px-6 py-12 flex flex-col md:flex-row gap-10">
    
    <aside class="w-full md:w-1/4 sticky top-24 h-fit bg-white p-6 rounded-3xl border border-zinc-100 shadow-sm">
        <div class="space-y-6">
            <div>
                <h4 class="text-xs font-bold uppercase tracking-widest text-zinc-400 mb-4">Management</h4>
                <nav class="flex flex-col gap-3 font-medium text-zinc-600">
                    <a href="/admin/admin" class="flex items-center gap-2 text-blue-600 bg-blue-50 px-4 py-2 rounded-xl">
                        <i class="ri- layout-grid-line"></i> All Products
                    </a>
                    <a href="/admin/create" class="flex items-center gap-2 hover:text-blue-600 hover:bg-zinc-50 px-4 py-2 rounded-xl transition">
                        <i class="ri-add-box-line"></i> Create Product
                    </a>
                </nav>
            </div>
            
            <div class="pt-6 border-t border-zinc-100">
                <h4 class="text-xs font-bold uppercase tracking-widest text-zinc-400 mb-4">System</h4>
                <a href="/users/logout" class="flex items-center gap-2 text-red-500 hover:bg-red-50 px-4 py-2 rounded-xl transition">
                    <i class="ri-logout-box-r-line"></i> Logout
                </a>
            </div>
        </div>
    </aside>

    <main class="w-full md:w-3/4">
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-10">
            <div>
                <h1 class="text-3xl font-bold text-zinc-900">Store Inventory</h1>
                <p class="text-zinc-500">Manage your product listings and store appearance.</p>
            </div>
            <a href="/admin/delete-all" onclick="return confirm('Are you sure you want to delete all products?')" 
               class="flex items-center gap-2 text-red-600 bg-red-50 hover:bg-red-100 px-5 py-2.5 rounded-xl font-semibold text-sm transition">
                <i class="ri-delete-bin-line"></i> Delete All Products
            </a>
        </div>

        <% if(success && success.length > 0){ %>
            <div class="mb-6 bg-green-50 text-green-700 px-6 py-4 rounded-2xl border border-green-100 flex items-center gap-3">
                <i class="ri-checkbox-circle-line text-xl"></i>
                <span class="font-medium"><%= success %></span>
            </div>
        <% } %>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <% if (products && products.length > 0) { %>
                <% products.forEach(function(product) { %>
                    <div class="bg-white rounded-3xl overflow-hidden border border-zinc-100 shadow-sm flex group transition-all hover:shadow-md">
                        <div class="w-32 h-full bg-<%= product.bgcolor %> flex items-center justify-center p-4 border-r border-zinc-50">
                            <img class="max-h-24 object-contain drop-shadow-lg group-hover:scale-110 transition-transform" 
                                 src="data:image/jpeg;base64, <%= product.image.toString('base64') %>" alt="">
                        </div>
                        
                        <div class="flex-grow p-5 flex flex-col justify-between bg-<%= product.panelcolor %> text-<%= product.textcolor %>">
                            <div class="flex justify-between items-start">
                                <div>
                                    <h3 class="font-bold text-lg leading-tight"><%= product.name %></h3>
                                    <div class="flex gap-3 mt-1 opacity-80 font-medium">
                                        <span>₹ <%= product.price %></span>
                                        <% if(product.discount > 0) { %>
                                            <span class="text-green-500 bg-white px-2 py-0.5 rounded text-xs">-₹<%= product.discount %></span>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="flex gap-2">
                                    <a href="/admin/edit/<%= product._id %>" class="p-2 bg-white/20 hover:bg-white/40 rounded-lg transition" title="Edit">
                                        <i class="ri-pencil-line"></i>
                                    </a>
                                    <a href="/admin/delete/<%= product._id %>" class="p-2 bg-red-50/20 hover:bg-red-500 hover:text-white rounded-lg transition" title="Delete">
                                        <i class="ri-delete-bin-6-line"></i>
                                    </a>
                                </div>
                            </div>
                            
                            <div class="mt-4 flex gap-2">
                                <span class="text-[10px] uppercase font-bold tracking-tighter opacity-60">UI Theme:</span>
                                <div class="w-3 h-3 rounded-full border bg-<%= product.bgcolor %> border-white/20 shadow-inner" title="Background"></div>
                                <div class="w-3 h-3 rounded-full bg-<%= product.panelcolor %> border border-white/20 shadow-inner" title="Panel"></div>
                                <div class="w-3 h-3 rounded-full text-<%= product.textcolor %> border border-white/20 shadow-inner" title="Text"></div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-span-full py-20 bg-zinc-50 rounded-3xl border-2 border-dashed border-zinc-200 flex flex-col items-center justify-center text-center">
                    <div class="w-20 h-20 bg-zinc-100 rounded-full flex items-center justify-center mb-4 text-zinc-300">
                        <i class="ri-archive-line text-4xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-zinc-900">No products found</h3>
                    <p class="text-zinc-500 mb-6">Your store is empty. Start by adding your first product.</p>
                    <a href="/admin/create" class="bg-blue-600 text-white px-6 py-3 rounded-xl font-bold shadow-lg shadow-blue-100 hover:bg-blue-700 transition">
                        Add New Product
                    </a>
                </div>
            <% } %>
        </div>
    </main>
</div>
<%- include('./partials/footer') %>