<%- include('./partials/header', {loggedin: false}) %>
<div class="w-full min-h-[80vh] flex items-center justify-center px-6">
    <div class="w-full max-w-md">
        <div class="bg-white rounded-[3rem] p-10 shadow-xl border border-zinc-100">
            <div class="text-center mb-10">
                <div class="w-16 h-16 bg-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-4 rotate-3 shadow-lg shadow-blue-200">
                    <i class="ri-user-add-line text-white text-2xl"></i>
                </div>
                <h1 class="text-3xl font-bold text-zinc-900 tracking-tighter">Join Scatch</h1>
                <p class="text-zinc-500 mt-2">Start your premium shopping journey today.</p>
            </div>

            <% if(error.length > 0){ %>
                <div class="mb-6 bg-red-50 text-red-600 px-4 py-3 rounded-xl text-sm text-center font-medium border border-red-100">
                    <%= error %>
                </div>
            <% } %>

            <form action="/users/register" method="post" class="space-y-4">
                <input class="w-full px-5 py-4 bg-zinc-50 border border-zinc-200 rounded-2xl focus:ring-2 focus:ring-blue-600 outline-none transition-all" type="text" placeholder="Full Name" name="fullname">
                <input class="w-full px-5 py-4 bg-zinc-50 border border-zinc-200 rounded-2xl focus:ring-2 focus:ring-blue-600 outline-none transition-all" type="email" placeholder="Email Address" name="email">
                <input class="w-full px-5 py-4 bg-zinc-50 border border-zinc-200 rounded-2xl focus:ring-2 focus:ring-blue-600 outline-none transition-all" type="password" placeholder="Create Password" name="password">
                
                <button type="submit" class="w-full bg-blue-600 text-white py-4 rounded-2xl font-bold hover:bg-blue-700 transition-all shadow-lg shadow-blue-100 active:scale-[0.98] mt-4">
                    Create Account
                </button>
            </form>

            <div class="mt-8 text-center">
                <p class="text-zinc-500">Already a member? <a href="/" class="text-blue-600 font-bold hover:underline underline-offset-4">Login here</a></p>
            </div>
        </div>
    </div>
</div>
<%- include('./partials/footer') %>