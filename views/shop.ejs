<%- include('./partials/header') %>
<div class="max-w-7xl mx-auto px-10 py-12 flex gap-10">
    <aside class="w-1/4 sticky top-24 h-fit space-y-10">
        <div>
            <h4 class="text-sm font-bold uppercase tracking-widest text-zinc-400 mb-4">Sort By</h4>
            <form action="/shop">
                <select class="w-full border border-zinc-200 p-3 rounded-xl appearance-none bg-white font-medium" name="sortby">
                    <option value="popular">Most Popular</option>
                    <option value="newest">New Arrivals</option>
                </select>
            </form>
        </div>
        <div class="space-y-3 font-medium text-zinc-600">
            <h4 class="text-sm font-bold uppercase tracking-widest text-zinc-400 mb-4">Categories</h4>
            <a href="#" class="block hover:text-blue-600">New Collection</a>
            <a href="#" class="block text-blue-600 font-bold">All Products</a>
            <a href="#" class="block hover:text-blue-600">On Sale</a>
        </div>
    </aside>

    <main class="w-3/4">
        <% if(success.length > 0){ %>
            <div class="mb-8 bg-blue-50 text-blue-600 p-4 rounded-xl border border-blue-100"><%= success %></div>
        <% } %>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% products.forEach(function(product){ %>
                <div class="group bg-white rounded-3xl overflow-hidden border border-zinc-100 hover:shadow-2xl hover:shadow-zinc-200 transition-all duration-500">
                    <div class="h-64 flex items-center justify-center p-8 transition-transform group-hover:scale-105 duration-500 bg-<%= product.bgcolor %>">
                        <img class="h-full object-contain drop-shadow-2xl" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
                    </div>
                    <div class="p-6 flex justify-between items-center bg-<%= product.panelcolor %> text-<%= product.textcolor %>">
                        <div>
                            <h3 class="text-lg font-bold"><%= product.name %></h3>
                            <h4 class="text-zinc-500 font-medium">â‚¹ <%= product.price %></h4>
                        </div>
                        <a href="/addtocart/<%= product._id %>" class="w-12 h-12 bg-white text-black flex items-center justify-center rounded-2xl shadow-sm hover:bg-zinc-900 hover:text-white transition">
                            <i class="ri-add-line text-xl"></i>
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    </main>
</div>
<%- include('./partials/footer') %>